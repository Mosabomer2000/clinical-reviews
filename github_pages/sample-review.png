<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3498db;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="800" height="600" fill="white" />
  
  <!-- Header -->
  <rect x="50" y="50" width="700" height="100" fill="url(#grad1)" rx="10" ry="10" />
  <text x="400" y="105" font-family="Arial, sans-serif" font-size="28" font-weight="bold" text-anchor="middle" fill="white">Clinical Review Generator</text>
  <text x="400" y="135" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="white">Interactive Demo</text>
  
  <!-- Main content -->
  <rect x="50" y="180" width="700" height="370" fill="#f8f9fa" rx="10" ry="10" stroke="#ddd" stroke-width="1" />
  
  <!-- Input section -->
  <rect x="80" y="210" width="640" height="100" fill="white" rx="5" ry="5" stroke="#ddd" stroke-width="1" />
  <text x="100" y="240" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#2c3e50">Enter Clinical Topic:</text>
  <rect x="100" y="250" width="600" height="40" fill="white" rx="5" ry="5" stroke="#3498db" stroke-width="2" />
  <text x="120" y="275" font-family="Arial, sans-serif" font-size="14" fill="#666">Type 2 Diabetes Mellitus</text>
  
  <!-- Options section -->
  <rect x="80" y="330" width="640" height="120" fill="white" rx="5" ry="5" stroke="#ddd" stroke-width="1" />
  <text x="100" y="360" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#2c3e50">Options:</text>
  
  <!-- Option 1 -->
  <text x="120" y="390" font-family="Arial, sans-serif" font-size="14" fill="#333">Evidence Recency:</text>
  <rect x="250" y="375" width="150" height="25" fill="white" rx="3" ry="3" stroke="#ddd" stroke-width="1" />
  <text x="260" y="392" font-family="Arial, sans-serif" font-size="12" fill="#333">Balanced (Recent + Seminal)</text>
  
  <!-- Option 2 -->
  <text x="120" y="425" font-family="Arial, sans-serif" font-size="14" fill="#333">Word Count:</text>
  <rect x="250" y="410" width="150" height="25" fill="white" rx="3" ry="3" stroke="#ddd" stroke-width="1" />
  <text x="260" y="427" font-family="Arial, sans-serif" font-size="12" fill="#333">~12,500 words</text>
  
  <!-- Option 3 -->
  <text x="450" y="390" font-family="Arial, sans-serif" font-size="14" fill="#333">Citation Style:</text>
  <rect x="550" y="375" width="150" height="25" fill="white" rx="3" ry="3" stroke="#ddd" stroke-width="1" />
  <text x="560" y="392" font-family="Arial, sans-serif" font-size="12" fill="#333">Vancouver</text>
  
  <!-- Generate button -->
  <rect x="450" y="410" width="250" height="40" fill="#3498db" rx="5" ry="5" />
  <text x="575" y="435" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="white">Generate Review</text>
  
  <!-- Preview section -->
  <rect x="80" y="470" width="640" height="60" fill="white" rx="5" ry="5" stroke="#ddd" stroke-width="1" />
  <text x="100" y="505" font-family="Arial, sans-serif" font-size="14" fill="#333">Preview of generated PDF with proper formatting and structure</text>
  <rect x="550" y="485" width="150" height="30" fill="#e74c3c" rx="5" ry="5" />
  <text x="625" y="505" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="white">Download PDF</text>
</svg>
